<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"

    >
    <!--显示的容器-->
    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:background="#ffffff"
        app:layout_constraintBottom_toTopOf="@id/img_home_tap2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_home_tap1"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_home_tap1"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/img_home_tap2" />

    <ImageView
        android:id="@+id/img_home_tap2"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_home_tap2"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/img_home_tap1"
        app:layout_constraintRight_toLeftOf="@id/img_home_tap3"

        />

    <ImageView
        android:id="@+id/img_home_tap3"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_home_tap3"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/img_home_tap2"
        app:layout_constraintRight_toRightOf="parent"

        />


    <TextView
        android:id="@+id/tv_home_tap1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/img_home_tap1"
        app:layout_constraintRight_toRightOf="@id/img_home_tap1"

        />

    <TextView
        android:id="@+id/tv_home_tap2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/img_home_tap2"
        app:layout_constraintRight_toRightOf="@id/img_home_tap2"

        />

    <TextView
        android:id="@+id/tv_home_tap3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/img_home_tap3"
        app:layout_constraintRight_toRightOf="@id/img_home_tap3" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@id/img_home_tap3" />

    <View
        android:layout_width="2px"
        android:layout_height="70dp"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/img_home_tap1"
        app:layout_constraintRight_toLeftOf="@id/img_home_tap2"

        />

    <View
        android:layout_width="2px"
        android:layout_height="70dp"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/img_home_tap2"
        app:layout_constraintRight_toLeftOf="@id/img_home_tap3" />


</android.support.constraint.ConstraintLayout>