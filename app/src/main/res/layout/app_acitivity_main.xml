<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/viewPosition"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_80"
        android:background="@drawable/bg_36cdff_6777ff"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="学习"
        android:textColor="#ffffff"
        android:textSize="@dimen/qb_px_28"
        app:layout_constraintBottom_toBottomOf="@id/viewPosition"
        app:layout_constraintLeft_toLeftOf="@id/viewPosition"
        app:layout_constraintRight_toRightOf="@id/viewPosition"
        app:layout_constraintTop_toTopOf="@id/viewPosition" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_20"
        android:background="@drawable/bg_4c7afa_10"
        android:text="跳转到学习界面"
        android:textColor="#ffffff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewPosition" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/qb_px_20"
        android:background="@drawable/bg_4c7afa_10"
        android:text="跳转到组件化界面"
        android:textColor="#ffffff"
        app:layout_constraintLeft_toRightOf="@id/btn1"
        app:layout_constraintTop_toTopOf="@id/btn1" />
</androidx.constraintlayout.widget.ConstraintLayout>