<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn1"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="BroadcastReceiver广播实现跨进程数据交互" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="binder跨进程数据交互" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="content provider实现" />

            <Button
                android:id="@+id/btn4"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="跳转到系统的图片选择" />

            <Button
                android:id="@+id/btn7"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="DiskLruCache的使用" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn8"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="fragment使用" />

            <Button
                android:id="@+id/btn10"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="viewpager实现广告页" />

            <Button
                android:id="@+id/btn11"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="分享到微信" />

            <Button
                android:id="@+id/btn13"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="room的使用" />

            <Button
                android:id="@+id/btn14"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="dialog的使用" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="jetpack的使用" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>